{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "npm run migrate:prod && tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "migrate:prod": "npx sequelize-cli db:migrate",
    "migrate": "dotenv -e .env npx sequelize-cli db:migrate",
    "migrate:undo": "dotenv -e .env npx sequelize-cli db:migrate:undo",
    "migrate:reset": "dotenv -e .env npx sequelize-cli db:migrate:undo:all && dotenv -e .env npx sequelize-cli db:migrate",
    "sync:lang": "ts-node src/i18n/sync.ts"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "keywords": [
    "Student Portal"
  ],
  "author": "Manish Maharjan",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "connect-redis": "^8.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "typeorm": "^0.3.20"
  },
